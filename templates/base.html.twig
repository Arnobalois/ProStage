<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
         <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}ProStage{% endblock %}</title>
        {% block stylesheets %}
        <link href="{{asset('/css/bootstrap.min.css')}}" rel="stylesheet" >
        {% endblock %}
    </head>
    <body>
      <div class="container-fluid">
{% block header %}
<div class="row">
    <div class="col-md-12">
      <h1 class="text-center">
        ProStage
      </h1>
    </div>
  </div>
{% endblock %}

<!-- Menu pour choisir le filtre ! -->
        {% block menu %}


          <div class="row">
		<div class="col-md-12">
			<nav class="navbar navbar-expand-lg navbar-light bg-light navbar-dark bg-dark">
				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
					<ul class="navbar-nav">
						<li class="nav-item">
							 <a class="nav-link" href="/">Stages</a>
						</li>
            <li class="nav-item">
							 <a class="nav-link" href="/Formations">Formations</a>
						</li>
            <li class="nav-item">
							 <a class="nav-link" href="/Entreprises">Entreprises</a>
						</li>

					</ul>

				</div>
			</nav>
		</div>
	</div>

         {% endblock %}

<!-- Contenu de la page avec filtre ou non ! -->
        {% block contenue %}
        <div class="row">
        		<div class="col-md-12">
        		</div>
        	</div>

         {% endblock %}

<!-- Footer ! -->


        {% block footer %}

        <div class="row">
        		<div class="col-md-12">
        		</div>
        	</div>

        {%endblock%}


        {% block javascripts %}
<script src="{{asset('/js/bootstrap.bundle.min.js')}}" ></script>
        {% endblock %}
      </div>
    </body>
</html>
